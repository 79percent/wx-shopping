.item {
  width: 100vw;
  height: 200rpx;
  border-bottom: 1px solid #cccccc;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item .goods_img image {
  width: 80%;
}
.item .right_box {
  flex: 5;
  height: 100%;
  padding-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item .right_box .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333333;
}
.item .right_box .price_num {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item .right_box .price_num .price {
  color: #f95450;
  font-size: 35rpx;
}
.item .right_box .price_num .num_box {
  color: #333;
  font-size: 25rpx;
}
.footer {
  width: 100vw;
  height: 140rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #cccccc;
  background-color: #fff;
}
.footer .left {
  flex: 2;
  padding-left: 20rpx;
}
.footer .center {
  padding-right: 10rpx;
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}
.footer .center .sum {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.footer .center .sum .sum_title {
  font-size: 30rpx;
}
.footer .center .sum .num {
  font-size: 40rpx;
  color: #f95450;
}
.footer .center .tip {
  font-size: 30rpx;
}
.footer .right {
  flex: 2;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #d4237a;
  color: #fff;
  font-size: 35rpx;
  font-weight: bold;
}
.footer .right_hover {
  opacity: 0.7;
}
