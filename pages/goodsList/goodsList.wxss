.list {
  height: calc(100vh - 180rpx);
}
.list .item {
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: row;
}
.list .item .left {
  flex: 1;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list .item .left image {
  width: 80%;
}
.list .item .right {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding: 10rpx;
}
.list .item .right .title {
  font-size: 30rpx;
  color: #000000;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 10rpx 0;
}
.list .item .right .price {
  color: red;
  font-size: 40rpx;
  text-align: left;
}
