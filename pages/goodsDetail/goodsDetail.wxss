.page {
  background-color: #ccc;
  padding-bottom: 120rpx;
}
.page swiper {
  width: 100vw;
  height: 65vw;
  background-color: #fff;
}
.page swiper swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.page swiper swiper-item image {
  width: 60%;
}
.page .price {
  color: #f74040;
  font-size: 40rpx;
  font-weight: bold;
  padding-left: 20rpx;
  background-color: #fff;
}
.page .title_box {
  width: 100vw;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}
.page .title_box .title {
  padding: 0 30rpx;
  flex: 4;
  border-right: 1px solid #ccc;
  font-size: 30rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.page .title_box .collection {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.page .title_box .collection .colledted:before {
  color: red;
}
.page .detail_title {
  background-color: #fff;
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: bold;
  height: 90rpx;
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding-left: 20rpx;
  border: 1px solid #ccc;
  border-left-width: 0;
  border-right-width: 0;
}
.footer {
  width: 100vw;
  height: 160rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}
.footer .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.footer .item .text {
  font-size: 25rpx;
}
.footer .item button {
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.footer .item_hover {
  opacity: 0.6;
}
.footer .add {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f69f00;
  color: #fff;
  font-size: 35rpx;
}
.footer .immediately {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #dc3c47;
  color: #fff;
  font-size: 35rpx;
}
